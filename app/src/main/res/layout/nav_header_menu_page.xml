<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffe814"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/entriesleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 Entries Left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:textColor="#247670"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entriesleft"
        android:text="Want more access?"
        android:layout_centerVertical="true"
        android:textSize="10sp"
        android:textColor="#247670"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buy $1.99"
        android:backgroundTint="#247670"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_toRightOf="@id/entriesleft"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>

</RelativeLayout>
